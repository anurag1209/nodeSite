<!DOCTYPE html>
<html>
<head>
	<title>Login/Signup</title>
	<% include ../partials/head %>
</head>
<body class="signup-page">
	<div class="container">
		<div class="logo">
			<a href="http://localhost:3000"><img src="/assets/images/sasa-logo.jpg" alt=""></a>
		</div>
	</div>
	<section class="sign">
		<div class="container">		
		<div class="row">
			<div class="col-md-12 col-sm-12">
				<div class="col-md-6 col-sm-6">
					<div class="signup-form">
						<h2>Sign Up</h2>
						<form method="POST" action="/auth/local/signup/submit">
			                <div class="screen">
			                <div class="form-group">
			                    <label for="exampleInputName">Name</label>
			                    <input type="text" class="form-control" id="exampleInputName" name="name">
			                </div>
			                <div class="form-group">
			                    <label for="exampleInputName">Username</label>
			                    <input type="text" class="form-control" id="exampleInputUserName" name="username">
			                </div>
			                <div class="form-group">
			                    <label for="exampleInputEmail1">Email Address</label>
			                    <input type="email" class="form-control" id="exampleInputEmail1"  name="email">
			                </div>
			                <div class="form-group">
			                    <label for="textbox">Password</label>
			                    <input type="password" class="form-control" id="exampleInputEmail1"  name="password">
			                </div>
			                </div>
			                <div class="iphn-btn">
			                	<button type="submit" class="btn btn-primary">Sign Up</button>
			                </div>
			            </form>
					</div>
				</div>
				<div class="col-sm-6 col-md-6">
					<div class="login-form">
						<h2>Login With Us</h2>
						<div class="screen">
							<form method="POST" action="/auth/local/login/submit">
			                <div class="form-group">
			                    <label for="exampleInputName">Username</label>
			                    <input type="text" class="form-control" id="exampleInputUserName" name="username">
			                </div>
			                <div class="form-group">
			                    <label for="textbox">Password</label>
			                    <input type="password" class="form-control" id="exampleInputEmail1" name="password">
			                </div>
			                <div class="iphn-btn">
			                	<button type="submit" class="btn btn-primary">Submit</button>
			                </div>
			            </form>
						</div>
					</div>	
				</div>
			</div>		
		</div>
	</div>
	</section>
</body>
	<% include ../partials/footer %>
</html>