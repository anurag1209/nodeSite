<!DOCTYPE html>
<html>
<head>
	<title>Login/Signup</title>
	 <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link type="text/css" rel="stylesheet" href="/assets/css/style.css">
</head>
<body class="signup-page">
	<% include ../partials/header %>
	<div class="container">
		<div class="row">
			<div class="col-md-4 col-sm-4">
				<div class="signup-form">
					<div class="strip"></div>
						<form method="POST" action="/auth/local/signup/submit">
		                <div class="screen">
		                <div class="form-group">
		                    <label for="exampleInputName">Name</label>
		                    <input type="text" class="form-control" id="exampleInputName" name="name">
		                </div>
		                <div class="form-group">
		                    <label for="exampleInputName">Username</label>
		                    <input type="text" class="form-control" id="exampleInputUserName" name="username">
		                </div>
		                <div class="form-group">
		                    <label for="exampleInputEmail1">Email Address</label>
		                    <input type="email" class="form-control" id="exampleInputEmail1"  name="email">
		                </div>
		                <div class="form-group">
		                    <label for="textbox">Password</label>
		                    <input type="password" class="form-control" id="exampleInputEmail1"  name="password">
		                </div>
		                </div>
		                <div class="iphn-btn">
		                	<button type="submit" class="btn round-button"></button>
		                </div>
		            </form>
				</div>
			</div>
			<div class="col-sm-5 col-md-5">
				<div class="login-form">
					<h2>Login With Us</h2>
					<div class="screen">
						<form method="POST" action="/auth/local/login/submit">
		                <div class="form-group">
		                    <label for="exampleInputName">Username</label>
		                    <input type="text" class="form-control" id="exampleInputUserName" name="username">
		                </div>
		                <div class="form-group">
		                    <label for="textbox">Password</label>
		                    <input type="password" class="form-control" id="exampleInputEmail1" name="password">
		                </div>
		                <div class="iphn-btn">
		                	<button type="submit" class="btn btn-default">Submit</button>
		                </div>
		            </form>
					</div>
				</div>	
			</div>
		</div>
	</div>


</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
</html>